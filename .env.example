# ---- FRONTEND (.env.local) --------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001/v1
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---- BACKEND (.env) ---------------------------------------

# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/convix

# Auth (generate with: openssl rand -base64 32)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=15m
REFRESH_EXPIRES_IN=30d

# AI
OPENAI_API_KEY=sk-REPLACE_WITH_OPENAI_KEY

# Redis
REDIS_URL=redis://localhost:6379

# Encryption (32 chars exactly, for storing channel API tokens)
ENCRYPTION_KEY=REPLACE_WITH_32_CHARACTER_STRING_

# Email (Postmark)
POSTMARK_API_KEY=REPLACE_WITH_POSTMARK_KEY
POSTMARK_FROM_EMAIL=hello@convix.ai

